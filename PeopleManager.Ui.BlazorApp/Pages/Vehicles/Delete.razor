@page "/vehicles/delete/{id:int}"

@using PeopleManager.Sdk

@inject VehicleApiService VehicleApiService
@inject NavigationManager NavigationManager

<h3>Delete</h3>

<p>Are you sure you want to delete this?</p>

<a class="btn btn-primary" href="vehicles">No</a>
<button class="btn btn-danger" @onclick="ExecuteDelete">Yes</button>

@code {
    [Parameter]
    public int Id { get; set; }

    private async Task ExecuteDelete()
    {
        await VehicleApiService.Delete(Id);
        NavigationManager.NavigateTo("vehicles");
    }
}
