@using PeopleManager.Dto.Results

@if (Model is not null)
{
    <div class="card">
        <div class="card-header">
            <a href="home/detail/@Model.Id">
                <h2>@Model.FirstName @Model.LastName</h2>
            </a>
        </div>
        <div class="card-body">
            <a class="btn btn-outline-primary" href="mailto:@Model.Email">Contact</a>
        </div>
    </div>
}

@code {
    [Parameter]
    public PersonResult? Model { get; set; }
}
